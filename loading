-- Criação da interface
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local UICorner = Instance.new("UICorner")
local Title = Instance.new("TextLabel")
local LoadingBar = Instance.new("Frame")
local Progress = Instance.new("Frame")
local UICornerProgress = Instance.new("UICorner")
local UIGradient = Instance.new("UIGradient")
local Tip = Instance.new("TextLabel")

-- Configuração do ScreenGui
ScreenGui.Name = "LoadingScreen"
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Configuração do Frame principal
Frame.Name = "MainFrame"
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Frame.Size = UDim2.new(0, 300, 0, 200) -- Tamanho fixo
Frame.Position = UDim2.new(0.5, 0, 0.5, 0) -- Centro da tela
Frame.AnchorPoint = Vector2.new(0.5, 0.5) -- Ponto de ancoragem no centro

-- Arredondamento das bordas
UICorner.Parent = Frame

-- Título
Title.Name = "Title"
Title.Parent = Frame
Title.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
Title.BackgroundTransparency = 1
Title.Size = UDim2.new(1, 0, 0.3, 0)
Title.Font = Enum.Font.GothamBold
Title.Text = "Loading"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextScaled = true
Title.TextWrapped = true

-- Barra de carregamento
LoadingBar.Name = "LoadingBar"
LoadingBar.Parent = Frame
LoadingBar.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
LoadingBar.Position = UDim2.new(0.1, 0, 0.6, 0)
LoadingBar.Size = UDim2.new(0.8, 0, 0.15, 0)

-- Barra de progresso
Progress.Name = "Progress"
Progress.Parent = LoadingBar
Progress.BackgroundColor3 = Color3.fromRGB(85, 170, 255)
Progress.Size = UDim2.new(0, 0, 1, 0)

UICornerProgress.Parent = Progress
UICornerProgress.CornerRadius = UDim.new(0, 5)

-- Gradiente na barra de progresso
UIGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(85, 255, 127)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(85, 170, 255))
}
UIGradient.Parent = Progress

-- Subtítulo
Tip.Name = "Tip"
Tip.Parent = Frame
Tip.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
Tip.BackgroundTransparency = 1
Tip.Position = UDim2.new(0.1, 0, 0.8, 0)
Tip.Size = UDim2.new(0.8, 0, 0.15, 0)
Tip.Font = Enum.Font.Gotham
Tip.Text = "Wait"
Tip.TextColor3 = Color3.fromRGB(255, 255, 255)
Tip.TextScaled = true
Tip.TextWrapped = true

-- Configuração de tempo
local totalTime = 10 * 60 -- 10 minutos em segundos
local initialBoostTime = 5 -- Tempo em segundos para atingir 1/4
local remainingTime = totalTime - initialBoostTime
local interval = 0.1 -- Intervalo de atualização em segundos

-- Animação inicial (carregando rapidamente até 1/4)
local quickSteps = initialBoostTime / interval
for i = 1, quickSteps do
    Progress:TweenSize(
        UDim2.new(0.25 * (i / quickSteps), 0, 1, 0),
        Enum.EasingDirection.Out,
        Enum.EasingStyle.Quad,
        interval,
        true
    )
    wait(interval)
end

-- Animação restante (carregando gradualmente de 1/4 até completo)
local remainingSteps = remainingTime / interval
for i = 1, remainingSteps do
    Progress:TweenSize(
        UDim2.new(0.25 + (0.75 * (i / remainingSteps)), 0, 1, 0),
        Enum.EasingDirection.Out,
        Enum.EasingStyle.Quad,
        interval,
        true
    )
    wait(interval)
end

-- Remover a interface após carregar
ScreenGui:Destroy()
